		<!-- Contact form -->
		<div class="col-lg-4 col-lg-offset-1 col-sm-5 col-sm-offset-1 right-col">
			<h2 class="form-header">Send a message</h2>
			<h4 class="form-message"></h4>
			<form id="contact-form" class="contact-form">
				<div class="form-group">
					<label for="name-form">Name</label>
					<input type="text" class="form-control" id="name-form" name="name" placeholder="Name" required>
				</div>
				<div class="form-group">
					<label for="email-form">Email address</label>
					<input type="email" class="form-control" id="email-form" name="_replyto" placeholder="Email" required>
				</div>
				<div class="form-group">
					<label for="message-form">Message</label>
					<textarea class="form-control" id="message-form" name="message" rows="5" placeholder="Your message" required></textarea>
				</div>
				<button type="submit" class="btn btn-default">Send</button>
			</form>
		</div>
	</div>
